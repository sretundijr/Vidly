@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div>
    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })
</div>
@if (Model.MoviesList.Count == 0)
{
    <text>There are no movies.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in Model.MoviesList)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                @*<td>@movie.Name</td>*@
                <td>@movie.Genre.Genre</td>
            </tr>
        }
    </table>
}